{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch UI Server (src/server.ts)",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/src/server.ts"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "smartStep": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "env": {
                "TS_NODE_FILES": "true",
                "TS_NODE_TRANSPILE_ONLY": "false"
            }
        },
        {
            "name": "Debug Current Active File",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "smartStep": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "env": {
                "TS_NODE_FILES": "true",
                "TS_NODE_TRANSPILE_ONLY": "false"
            }
        }
    ]
}